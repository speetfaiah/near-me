@page
@model NearMe.WebApp.Pages.ErrorModel

@{
    ViewBag.Title = $"Status Code {Model.ErrorStatusCode}";
}

<h1 class="text-danger">Status Code: @Model.ErrorStatusCode</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (!string.IsNullOrEmpty(Model.RequestId))
{
    <h3>Request ID</h3>
    <p>
        <code>@Model.RequestId</code>
    </p>
}

@if (!string.IsNullOrEmpty(Model.OriginalURL))
{
    <h3>Original URL</h3>
    <p>
        <code>@Model.OriginalURL</code>
    </p>
}
